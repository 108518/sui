    .surround
      .features
        div.frontend
          img.sdc(src="pictures/yuanpan_03.png")
          img.bili(src="pictures/first1_03.png")
          div.gg
            div.play
              img.dialog(src="pictures/first3_06.png")
              div.fly
                img.rocket(src="pictures/roket_03.png")
                img.shiyu(src="pictures/shiyu_12.png")
          div.cloud
            img(src="pictures/cloud_02.png" style="width:100%")    
        div.nicedemo(style="display:none")
          img(src="pictures/home-page_03.png" )
        div.casesupport(style="display:none")
